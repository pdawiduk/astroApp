
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.example.shogun.astroapplication.SunFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/sun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="124dp"
                android:layout_height="75dp"
                android:layout_gravity="top"
                android:src="@drawable/rise" />

            <TextView
                android:id="@+id/riseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:hint="7:00"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/size_text_sun" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="111dp"
                android:layout_height="87dp"
                android:src="@drawable/sunsetb" />

            <TextView
                android:id="@+id/sunsetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="22:00"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/size_text_sun" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="111dp"
                android:layout_height="87dp"
                android:src="@drawable/zmierzch" />

            <TextView
                android:id="@+id/twilightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="13:00"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/size_text_sun" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="3"
        android:hint="9:34"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="44dp" />
</LinearLayout>


